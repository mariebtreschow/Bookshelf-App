extends ../application.pug

block content
   .container
      .row
         .col-xs-8.offset-xs-2
            h1 Create a New Book here:
            hr
            form(action="/books" method="POST")
               div(class="form-group")
                  lable(for="book-title") Title
                  input(name="title" type="text" class="form-control" id="book-title")
               div(class="form-group")
                  lable(for="book-cover-image") Cover Image URL
                  input(name="imageURL" type="text" class="form-control" id="book-cover-image")
               div(class="form-group")
                  lable(for="book-author") Author
                  input(name="author" type="text" class="form-control" id="book-author")
               div(class="form-group")
                  lable(for="book-description") Description
                  textarea(name="description" class="form-control" rows=6 id="books-description")
               div(class="form-group text-xs-center")
                  button(type="submit" class="btn btn-ls btn-success") Create a New Book
